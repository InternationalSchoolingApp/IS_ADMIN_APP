<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/chat_activity_log"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/chat_log_ll"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/is_light_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_light"
            android:textColor="@color/is_dark_blue"
            android:id="@+id/date_last_active"
            android:includeFontPadding="false"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/rubik_light"
            android:textColor="@color/is_dark_blue"
            android:id="@+id/date_last_de_active"
            android:textSize="15sp"
            android:includeFontPadding="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/rubik"
            android:textColor="@color/is_dark_blue"
            android:id="@+id/total_time"
            android:textSize="14sp"
            />












    </LinearLayout>

</RelativeLayout>