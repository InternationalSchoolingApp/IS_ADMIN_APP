<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Chat">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/rubik"
        android:includeFontPadding="false"
        android:text="Chat"
        android:textColor="@color/dash_gif_blue"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/chat_with_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/dash_gif_blue"
        android:fontFamily="@font/rubik"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:text="Chat With Student"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/chat_with_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/dash_gif_blue"
        android:fontFamily="@font/rubik"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:text="Chat With Teacher"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/rubik"
        android:includeFontPadding="false"
        android:text="Recent Chat Teacher"
        android:textColor="@color/dash_gif_blue"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/dash_gif_blue"
        android:id="@+id/recentRecyclerViewTeacher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/rubik"
        android:includeFontPadding="false"
        android:text="Recent Chat Student"
        android:textColor="@color/dash_gif_blue"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/dash_gif_blue"
        android:id="@+id/recentRecyclerViewStudent"/>


</LinearLayout>