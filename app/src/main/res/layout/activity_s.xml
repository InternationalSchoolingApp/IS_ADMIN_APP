<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.S">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        app:tint="@color/dash_gif_blue"
        android:layout_alignParentLeft="true"
        android:id="@+id/notification_back_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:includeFontPadding="false"
        android:text="Manage User"
        android:textColor="@color/dash_gif_blue"
        android:textSize="20sp" />


  </RelativeLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:padding="20dp"
      android:background="@drawable/curve_corner_less"
      android:backgroundTint="@color/is_dark_blue"
      >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/rubik"
        android:id="@+id/name_search"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name_search"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/rubik"
        android:id="@+id/email_search"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="@drawable/curve_corner_less"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/email_search"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_advance_search"
        android:alpha="0.8"/>


  </RelativeLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/student_search_rv"
      android:layout_marginHorizontal="15dp"/>

  </LinearLayout>