<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:backgroundTint="@color/white"
    tools:context=".fragment.Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/curve_corner"
                android:backgroundTint="@color/is_light_blue"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik"
                    android:includeFontPadding="false"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:includeFontPadding="false"
                    android:textColor="@color/dash_gif_blue"
                    android:textSize="15sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_dark_blue"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik"
                    android:id="@+id/payments_rv"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advance Search"
                    android:background="@drawable/curve_corner_less"
                    android:backgroundTint="@color/white"
                    android:layout_below="@+id/payments_rv"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_advance_search"
                    android:alpha="0.8"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_dark_blue"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage User"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik"
                    android:id="@+id/User_rv"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:background="@drawable/curve_corner_less"
                    android:backgroundTint="@color/white"
                    android:layout_below="@+id/User_rv"
                    android:layout_marginTop="10dp"
                    android:id="@+id/search_button_user"
                    android:alpha="0.8" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_dark_blue"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Session"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik"
                    android:id="@+id/Session_rv"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:background="@drawable/curve_corner_less"
                    android:backgroundTint="@color/white"
                    android:layout_below="@+id/Session_rv"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_session"
                    android:alpha="0.8"/>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/curve_corner_less"
                android:backgroundTint="@color/is_dark_blue"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch Chat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/rubik"
                    android:id="@+id/checl_chat_rv"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:background="@drawable/curve_corner_less"
                    android:backgroundTint="@color/white"
                    android:layout_below="@+id/checl_chat_rv"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_check_chat"
                    android:alpha="0.8"/>



            </RelativeLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>